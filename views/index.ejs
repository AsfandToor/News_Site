<!DOCTYPE html>
<html lang="en">
    <%- include('layout/header') -%>

    <body>
        <%- include('layout/navbar') -%>

        <!-- Top News Start-->
        <div class="top-news">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="row tn-slider">
                            <% if(allNews) { %>
                                <% for (var i = 0; i < allNews.length; i++) { %>
                                    <div class="col-md-12">
                                        <div class="tn-img">
                                            <img class="img-fluid" src="uploads/<%= allNews[i].image %>" />
                                            <div class="tn-title">
                                                <a href="/news/<%= allNews[i]._id %>"><%= allNews[i].title %></a>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
